def load_data():
    try:
        with open(DATA_FILE, "r") as f:
            return json.load(f)
    except FileNotFoundError:
        return {
            "admins": [6324969976],  # Ø§ÙŠØ¯ÙŠÙƒ Ø§Ù†Øª ÙƒØ£ÙˆÙ„ Ø£Ø¯Ù…ÙŠÙ†
